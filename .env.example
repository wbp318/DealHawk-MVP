# DealHawk Backend Configuration

# Environment: "development" or "production"
# In production: Swagger/ReDoc docs are disabled
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./dealhawk.db
# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/dealhawk

# Server
API_HOST=0.0.0.0
API_PORT=8000

# Set to true only for local development (enables SQL query logging)
DEBUG=false

# Logging
LOG_LEVEL=INFO

# JWT Authentication
# IMPORTANT: Change this in production! Use a long random string.
JWT_SECRET_KEY=dealhawk-dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Future: Redis
# REDIS_URL=redis://localhost:6379/0

# Future: API keys for premium data sources
# MARKETCHECK_API_KEY=
# CHROME_EXTENSION_ID=
