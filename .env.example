# DealHawk Backend Configuration

# Environment: "development" or "production"
# In production: Swagger/ReDoc docs are disabled
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./dealhawk.db
# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/dealhawk

# Server
API_HOST=0.0.0.0
API_PORT=8000

# Set to true only for local development (enables SQL query logging)
DEBUG=false

# Logging
LOG_LEVEL=INFO

# JWT Authentication
# IMPORTANT: Change this in production! Use a long random string.
JWT_SECRET_KEY=dealhawk-dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe (required for subscription billing)
# Get keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Create a Pro price in Stripe Dashboard → Products → Price ID
STRIPE_PRO_PRICE_ID=

# Database migrations (production)
# Run: alembic upgrade head

# Future: Redis
# REDIS_URL=redis://localhost:6379/0

# MarketCheck API (optional - uses stub data if not set)
MARKETCHECK_API_KEY=

# Dealership API tier
# IMPORTANT: Change this salt in production!
DEALER_API_KEY_SALT=dealhawk-dealer-key-salt
